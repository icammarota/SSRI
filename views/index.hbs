        <!-- Book Modal -->
        <div id= 'book_modal_container'>
            <div id='book_information' class='hidden'>
                <h2><u>Dettagli libro</u></h2>
                <button id='add_book_cart'>Aggiungi al carrello</button>
                <h3 id='book_information_close'>Chiudi</h3>
            </div>
        </div>
        
        <!-- Cart Modal -->
        <div id='cart_modal' class='hidden'>
            <h1><u>Carrello</u></h1>
            <div id='cart_book_container'>

